package com.synopsys.integration.detect.imagebuilder

class PackageManagers {
    String downloadScriptPath = "download"
    private List<PackageManager> supported

    PackageManagers() {
        supported = new ArrayList<>()
        supported.add(new PackageManager(
                "gradle",
                "6.8.2",
                "detect.gradle.path",
        "${downloadScriptPath}/download-gradle.sh"))
        supported.add(new PackageManager(
                "maven",
                "3.8.1",
                "detect.maven.path",
        "${downloadScriptPath}/download-maven.groovy"))
        supported.add(new PackageManager(
                "npm",
                "7.11.2",
                "detect.npm.path",
        "${downloadScriptPath}/download-npm.groovy"))
    }

    List<PackageManager> getSupported() {
        return supported
    }
}