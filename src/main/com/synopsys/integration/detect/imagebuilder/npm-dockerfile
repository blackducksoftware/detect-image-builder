ARG ORG
ARG DETECT_VERSION

FROM ${ORG}/detect:${DETECT_VERSION}

# Update, get utilities
RUN apk update && apk add bash

# npm
ARG PKG_MGR_VERSION

RUN apk add  --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/latest-stable/main/ npm=${PKG_MGR_VERSION}

RUN node --version && npm --version && java --version

# Define Docker Image entrypoint
ENTRYPOINT ["bash", "/detect/run-detect.sh"]